#!/bin/bash

# Ensure the script is run with sudo
if [ "$EUID" -ne 0 ]; then
    echo "[!] This script must be run as root. Use: sudo beef"
    exit 1
fi

# Define the BeEF path
BEEF_PATH="/usr/share/beef-xss/beef"

# Check if the BeEF script exists
if [ ! -f "$BEEF_PATH" ]; then
    echo "[!] BeEF not found at $BEEF_PATH. Check installation."
    exit 1
fi

# Run BeEF
echo "[*] Starting BeEF..."
$BEEF_PATH &

# Wait a bit to allow BeEF to initialize
sleep 5

# Notify the user that BeEF is running
echo "[*] BeEF is running at: http://127.0.0.1:3000"
